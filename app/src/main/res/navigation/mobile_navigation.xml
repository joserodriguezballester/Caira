<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_dashboard">

    <fragment
        android:id="@+id/nav_dashboard"
        android:name="com.example.caira2.iu.activity.ui.dashboard.DashboardFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/nav_centres"
        android:name="com.example.caira2.iu.activity.ui.centers.CentersFragment"
        android:label="@string/menu_centres"
        tools:layout="@layout/fragment_centers" />

    <fragment
        android:id="@+id/nav_perfil"
        android:name="com.example.caira2.iu.activity.ui.PerfilFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_perfil" />
    <action
        android:id="@+id/action_global_nav_slideshow"
        app:destination="@id/nav_perfil" />
</navigation>