<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Caira2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cairaPink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="LaunchTheme" parent="Theme.Caira2">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.Caira2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Caira2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Caira2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.Caira2">
        <item name="windowActionBar">false</item>
        <item name="background">@drawable/splash_background</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/secondary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_caira_logo_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Caira2.NoActionBar</item>
    </style>

    <style name="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenIconBackgroundColor">@color/secondary</item>
    </style>

    <style name="Theme.Caira2.H1">
        <item name="android:fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">20sp</item>

    </style>
    <style name="Theme.Caira2.H1.Purple">
        <item name="android:textColor">@color/cairaPurple</item>
    </style>
    <style name="Theme.Caira2.H1.Pink">
        <item name="android:textColor">@color/cairaPink</item>
    </style>


    <style name="Theme.Caira2.H2Purple">
        <item name="android:fontFamily">@font/space_grotesk_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/cairaPurple</item>
    </style>
    <style name="Theme.Caira2.TextPurple">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/cairaPurple</item>
    </style>
    <style name="Theme.Caira2.TextEnlace">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/cairaPink</item>

    </style>
</resources>