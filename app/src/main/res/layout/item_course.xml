<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/idImagen"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/idSiglas"
                        style="@style/Theme.Caira2.H1.Pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        tools:text="UPV" />

                    <TextView
                        android:id="@+id/idNombre"
                        style="@style/Theme.Caira2.H1.Purple"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        tools:text="Nombre del curso" />
                </LinearLayout>

                <TextView
                    android:id="@+id/idTipo"
                    style="@style/Theme.Caira2.H2Purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="15dp"
                    tools:text="Categoria " />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/idLocation"
                        style="@style/Theme.Caira2.TextPurple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="15dp"
                        tools:text="Location " />

                    <!--                    <RatingBar-->
                    <!--                        android:id="@+id/ratingBar"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:numStars="5"-->
                    <!--                        android:rating="3"-->
                    <!--                        android:scaleX=".25"-->
                    <!--                        android:scaleY=".25"-->
                    <!--                        android:transformPivotX="0dp"-->
                    <!--                        android:transformPivotY="0dp"-->
                    <!--                        android:layout_weight="1"-->
                    <!--                        />-->

                    <TextView
                        android:id="@+id/idPrecio"
                        style="@style/Theme.Caira2.TextPurple"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="15dp"
                        tools:text="$precio$ " />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>