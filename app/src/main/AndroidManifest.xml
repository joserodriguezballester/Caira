<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.caira2">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CairaAplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Caira2"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".iu.activity.SplashActivity"
            android:exported="true"
           android:theme="@style/Theme.App.Starting"
            >
<!--            android:theme="@style/LaunchTheme"-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".iu.activity.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".iu.activity.BodyappActivity"
            android:exported="false"
            android:label="@string/title_activity_bodyapp"
            android:theme="@style/Theme.Caira2.NoActionBar" />
        <activity
            android:name=".iu.activity.WelcomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Caira2.NoActionBar" />

    </application>

</manifest>